{{#>layout}}
	<div class="container" style="margin-top: 100px">
		<div class="row">
			<div class="col-12 col-lg-3">
				<div style="font-family: Inter;font-size: 16px;font-weight: 500;line-height: 22.4px;text-align: left;color: #333;">
					<p class="p-0 mb-10px"><a style="color: #333" href="#">Popular</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">New</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">Selection for you</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">Video</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">Articles</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">News</a></p>
					<p class="p-0 mb-10px"><a style="color: #333" href="#">Saved</a></p>
				</div>
				<div class="mt-20px">
					{{> tag text="Biology"}}
					{{> tag text="AI" }}
					{{> tag text="Nanotechnology" }}
					{{> tag text="Physics" }}
					{{> tag text="Medicine" }}
					{{> tag text="Ecology" }}
					{{> tag text="Chemistry" }}
					{{> tag text="Genetics and Biotechnology" }}
					{{> tag text="Astronomy" }}
					{{> tag text="Anthropology" }}
					{{> tag text="Economy" }}
				</div>
			</div>


			<div class="col-12 col-lg-9">
				{{> post_header text="Impact of Climate Change on Ecosystem Biodiversity: Current Challenges and Adaptation Strategies" }}
				<div style="max-width: 770px;">
					{{> post }}
					<section>
						{{> write_comment }}
					</section>
					{{> post_comments }}
				</div>

			</div>
		</div>
	</div>
{{/layout}}
